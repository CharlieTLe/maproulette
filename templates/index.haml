-extends "base.html"
-block html
  %head
    %title << MapRoulette
    %link rel="stylesheet" href="css/style.css"
    %link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.5.1/leaflet.css"
    %script src="http://cdn.leafletjs.com/leaflet-0.5.1/leaflet.js"
    %script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"
    %script src="js/maproulette.js"
  %body onload="init()"
    %div#map.fullscreen
    %div#msgBox
    %div#dlgBox
    %div.banner
      %strong
        OPENSTREETMAP
        %em
          MAPROULETTE
      %div
        -if session.osm_token:
          logged in as: {{ session.osm_display_name }}
        -else:
          %a href="{{ url_for('oauth_authorize') }} << log in
      %div 
        -if {{is_authorized}}
            logged in as {{OSM.display_name}}
        -else
            not logged in. log in.
      %div#challenge
        CURRENT CHALLENGE
        %div#challengeDetails
      %div#about.button onclick='showHelp()'
        about/help
      %div style="font-size:10px"
        we're down to
        %span#counter
          connectivity errors. Thanks!    
      %div#noterror.button onclick='nextUp("noterror")'
        THIS IS NOT AN ERROR:/
        %span.key << q
      %div.button onclick='nextUp("skip")'
        I'M NOT SURE / SKIP
        %span.key << w
      %div.button onclick='openIn("josm")'
        EDIT IN JOSM
        %span.key << e
      %div.button onclick='openIn("potlatch")'
        EDIT IN POTLATCH
        %span.key << r
      %div.button onclick='openIn("id")'
        EDIT IN ID
        %span.key << i
